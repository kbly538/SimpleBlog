@model IndexPageViewModel

<div class="pagenavcontroller">
    @if (@Model.PageNumber > 1)
    {
        <a asp-action="Index"
           asp-controller="Home"
           asp-route-pageNumber="@(Model.PageNumber - 1)"
           asp-route-category="@Model.Category"> &lt; </a>
    }

    @foreach (int p in Model.Pages)
    {


        if (p == -1)
        {
            <span class="dots">...</span>
        }
        else
        {

            <a class="@(p == Model.PageNumber ? "active" : "")"
               asp-action="Index"
               asp-controller="Home"
               asp-route-pageNumber="@p"
               asp-route-category="@Model.Category"> @p </a>
        }
    }


    @if (@Model.NextPage)
    {
        <a asp-action="Index"
           asp-controller="Home"
           asp-route-pageNumber="@(Model.PageNumber + 1)"
           asp-route-category="@Model.Category"> &gt; </a>
    }
</div>