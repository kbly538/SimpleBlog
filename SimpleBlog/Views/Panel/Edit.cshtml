@model PostViewModel

<div>
    <h2>Create Post</h2>
    <form asp-controller="panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Content</label>
            <input asp-for="Content" />
        </div>
        <div>
            <label>Image</label>
            <input asp-for="Image" />
        </div>

        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>