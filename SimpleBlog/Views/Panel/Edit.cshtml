@model PostViewModel


<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div>
    <h2>Create Post</h2>
    <form asp-controller="panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Content</label>
            <textarea id="editor" asp-for="Content"></textarea>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" />
            <input asp-for="Image" />
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
        <div>
            <label>Category</label>
            
            <select asp-for="Category">
                <option value="Programming">Programming</option>
                <option value="Ideas">Ideas</option>
                <option value="Computers">Computers</option>
            </select>
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>

        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}